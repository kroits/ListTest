<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.b3216.listtest.Main2Activity">

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="511dp"
        android:id="@+id/guideline"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="12dp"
        app:layout_constraintGuide_percent="0.03076923" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="492dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.96330273" />


    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="511dp"
        android:id="@+id/guideline3"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="373dp"
        app:layout_constraintGuide_percent="0.97179484" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="98dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.19266056" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline6"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="457dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.893578" />

    <ListView
        app:layout_constraintRight_toLeftOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        android:id="@+id/ListView"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="0dp" />

    <ImageView
        android:layout_width="389dp"
        android:layout_height="53dp"
        app:srcCompat="@drawable/selectbar"
        android:id="@+id/imageView"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:text=""
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:elevation="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView" />

    <Button
        android:text="Button"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        app:layout_constraintLeft_toRightOf="@+id/button"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.8" />


</android.support.constraint.ConstraintLayout>
